{
  "info": {
    "_postman_id": "b2f4d8a2-7e79-4a0c-9d58-6f9fe7c7e4a1",
    "name": "Core Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Core Auth endpoints: user + tenant management (session cookie auth)."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "email", "value": "test.user@example.com" },
    { "key": "password", "value": "Password123!" },
    { "key": "newPassword", "value": "Password456!" },
    { "key": "deviceId", "value": "11111111-1111-1111-1111-111111111111" },
    { "key": "activationToken", "value": "" },
    { "key": "resetToken", "value": "" },
    { "key": "personalTenantId", "value": "" },
    { "key": "tenantId", "value": "" },
    { "key": "tenantName", "value": "Acme Corporation" },
    { "key": "tenantSubdomain", "value": "acme" },
    { "key": "tenantSubdomainNew", "value": "acme-ltd" },
    { "key": "user2Email", "value": "second.user@example.com" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Body ok=true', function () { pm.expect(pm.response.json().ok).to.eql(true); });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "POST /auth/user/register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"nick_name\": \"test\",\n  \"full_name\": \"Test User\",\n  \"device_id\": \"{{deviceId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/user/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200 or 409', function () { pm.expect([200,409]).to.include(pm.response.code); });",
                  "if (pm.response.code === 200) {",
                  "  const body = pm.response.json();",
                  "  pm.test('ok=true', () => pm.expect(body.ok).to.eql(true));",
                  "} else {",
                  "  pm.test('email already registered', () => pm.expect(pm.response.json().ok).to.eql(false));",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/user/activate",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"token\": \"{{activationToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/user/activate",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "activate"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json();",
                  "pm.test('ok=true', () => pm.expect(body.ok).to.eql(true));",
                  "if (body.tenant_id) {",
                  "  pm.collectionVariables.set('personalTenantId', String(body.tenant_id));",
                  "  pm.environment.set('personalTenantId', String(body.tenant_id));",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/user/login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"remember_me\": true,\n  \"device_id\": \"{{deviceId}}\",\n  \"device_description\": \"Postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/user/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json();",
                  "pm.test('ok=true', () => pm.expect(body.ok).to.eql(true));",
                  "// Session cookie is stored automatically by Postman if allowed."
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/user/update",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nick_name\": \"test2\",\n  \"full_name\": \"Test User Two\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/user/update",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "update"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('ok=true', function () { pm.expect(pm.response.json().ok).to.eql(true); });"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/user/changepassword",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"old_password\": \"{{password}}\",\n  \"new_password\": \"{{newPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/user/changepassword",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "changepassword"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('ok=true', function () { pm.expect(pm.response.json().ok).to.eql(true); });"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/user/forgotpassword (issue token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{email}}\",\n  \"token\": \"\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/auth/user/forgotpassword",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "forgotpassword"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('ok=true', function () { pm.expect(pm.response.json().ok).to.eql(true); });",
                  "// Copy the reset token from your email sink (core-smtp) into {{resetToken}}."
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/user/forgotpassword (reset password)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"token\": \"{{resetToken}}\",\n  \"new_password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/user/forgotpassword",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "user", "forgotpassword"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status 200', () => pm.response.to.have.status(200));", "pm.test('ok=true', () => pm.expect(pm.response.json().ok).to.eql(true));"] }
            }
          ]
        }
      ]
    },
    {
      "name": "Tenant",
      "item": [
        {
          "name": "POST /auth/tenant/create",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"full_name\": \"{{tenantName}}\",\n  \"subdomain\": \"{{tenantSubdomain}}\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/auth/tenant/create",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "tenant", "create"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "const body = pm.response.json();",
                  "pm.test('ok=true', () => pm.expect(body.ok).to.eql(true));",
                  "if (body.tenant_id) {",
                  "  pm.collectionVariables.set('tenantId', String(body.tenant_id));",
                  "  pm.environment.set('tenantId', String(body.tenant_id));",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /auth/tenant/subdomaincheck",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/tenant/subdomaincheck?subdomain={{tenantSubdomain}}",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "tenant", "subdomaincheck"],
              "query": [{ "key": "subdomain", "value": "{{tenantSubdomain}}" }]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status 200', () => pm.response.to.have.status(200));", "pm.test('ok=true', () => pm.expect(pm.response.json().ok).to.eql(true));"] }
            }
          ]
        },
        {
          "name": "POST /auth/tenant/update",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": {{tenantId}},\n  \"full_name\": \"{{tenantName}} Ltd\",\n  \"subdomain\": \"{{tenantSubdomainNew}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/tenant/update",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "tenant", "update"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status 200', () => pm.response.to.have.status(200));", "pm.test('ok=true', () => pm.expect(pm.response.json().ok).to.eql(true));"] }
            }
          ]
        },
        {
          "name": "POST /auth/tenant/user/add",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": {{tenantId}},\n  \"user_email\": \"{{user2Email}}\",\n  \"role\": \"users\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/tenant/user/add",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "tenant", "user", "add"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200/409/400', () => pm.expect([200,409,400]).to.include(pm.response.code));",
                  "if (pm.response.code === 200) pm.test('ok=true', () => pm.expect(pm.response.json().ok).to.eql(true));"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /auth/tenant/user/update (role)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"tenant_id\": {{tenantId}},\n  \"user_email\": \"{{user2Email}}\",\n  \"role\": \"administrator\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/auth/tenant/user/update",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "tenant", "user", "update"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": { "exec": ["pm.test('Status is 200/409/404', () => pm.expect([200,409,404]).to.include(pm.response.code));"] }
            }
          ]
        },
